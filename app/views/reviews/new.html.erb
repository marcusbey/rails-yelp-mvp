# app/views/reviews/new.html.erb


<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-4">
      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :content %>
        <%= f.input :rating %>
        <%= f.submit "add", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

